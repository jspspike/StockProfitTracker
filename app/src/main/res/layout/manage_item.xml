<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/stock_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:text="Symb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stock_symbol"
        android:layout_alignBaseline="@+id/stock_name"
        android:layout_alignBottom="@+id/stock_name"
        android:layout_toEndOf="@+id/stock_name" />

    <TextView
        android:text="CHNG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stock_change"
        android:layout_alignBaseline="@+id/stock_symbol"
        android:layout_alignBottom="@+id/stock_symbol"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:text="Amount:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/stock_amount"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:text="Profit:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBottom="@+id/stock_profit"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stock_profit"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/stock_amount"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="17dp" />

    <TextView
        android:text="AMT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/stock_amount"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/stock_name"
        android:layout_alignStart="@+id/stock_profit" />

    <TextView
        android:text="pcnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stock_change_pcnt"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="MNY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stock_money"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Sold:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/stock_profit"
        android:layout_alignBottom="@+id/stock_profit"
        android:layout_toStartOf="@+id/stock_money" />
</RelativeLayout>